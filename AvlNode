public class AvlNode {

    private int data;
    private AvlNode parent;
    private AvlNode rightChild;
    private AvlNode leftChild;
    private int nodeDepth;
    private int nodeHeight;
    private int balance;

    /**
     * A default constructor for the AvlNode class
     */
    public AvlNode(){

    }

    public int getData(){
        return data;
    }

    public int getNodeDepth(){
        return nodeDepth;
    }

    public int getNodeHeight(){
        return nodeHeight;
    }

    public AvlNode getParent() {
        return parent;
    }

    public AvlNode getRightChild(){
        return rightChild;
    }

    public AvlNode getLeftChild(){
        return leftChild;
    }

    public void setData(int newData){
        data = newData;
    }

    public void setRightChild(AvlNode newRightChild){
        rightChild = newRightChild;
    }

    public void setLeftChild(AvlNode newLeftChild){
        leftChild = newLeftChild;
    }

    public int findNodeBalance(){
        return(leftChild.getNodeHeight() - rightChild.getNodeHeight());
    }
}
