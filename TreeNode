/**
 * This class is an interface for a tree node.
 */
package oop.ex4.data_structures;

public interface TreeNode {

    /**
     * Connects a node with another node (its parent), as that node's right child.
     * @param newRightChild the node to be assigned as the right child.
     */
    void setRightChild(TreeNode newRightChild);

    /**
     * Connects a node with another node (its parent), as that node's left child.
     * @param newLeftChild the node to be assigned as the left child.
     */
    void setLeftChild(TreeNode newLeftChild);

    /**
     * Connects a node with another node (its child), as that node's parent.
     * @param newParent the nodes to be assigned the parent.
     */
    void setParent(TreeNode newParent);

    /**
     * @return the node's parent node.
     */
    TreeNode getParent();

    /**
     * @return the node's right child node.
     */
    TreeNode getRightChild();

    /**
     * @return the node's left child node.
     */
    TreeNode getLeftChild();

    /**
     * Sets the value (an integer) of the node's data.
     * @param newData the value to be set.
     */
    void setData(int newData);

    /**
     * @return the value of the node's data.
     */
    int getData();

    /**
     * Set's the height of the node as the maximum height of each of its subtrees.
     */
    void setHeight();

    /**
     * @return the node's height.
     */
    int getHeight();

}
